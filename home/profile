# vim: filetype=sh
export CARGO_HOME=$HOME/.local/share/cargo
export DENO_INSTALL=$HOME/.local/share/deno
export RUSTUP_HOME=$HOME/.local/share/rustup

for p in \
  $CARGO_HOME/bin \
  $DENO_INSTALL/bin \
  $HOME/.local/bin \

do
  case ":$PATH:" in
    *:$p:*)
      ;;
    *)
      PATH=$p:$PATH
  esac
done
